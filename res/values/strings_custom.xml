<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
    <!-- Call settings screen, message wait indicator name -->
    <string name="mwi_notification_title">Message wait indicator</string>
    <!-- Call settings screen, message wait indicator summary -->
    <string name="mwi_notification_summary">Show message wait indicator voicemail notifications</string>
    <string name="preference_category_interface">Interface</string>
    <string name="non_intrusive_incall_title">Non intrusive</string>
    <string name="non_intrusive_incall_summary">Use non intrusive dialog for incoming calls</string>
    <!-- In-call vibration -->
    <string name="incall_vibration">In-call vibration</string>
    <string name="vibrate_outgoing">Vibrate on answer</string>
    <string name="vibrate_call_waiting">Vibrate on call waiting</string>
    <string name="vibrate_hangup">Vibrate on hang up</string>
    <string name="vibrate_60_title">Vibrate every minute</string>
    <string name="vibrate_60_summary">Vibrates at the 60 second mark of every minute during outgoing calls</string>

    <!-- Setting title for the flip action setting. -->
    <string name="flip_action_title">Flip action</string>

    <!-- Dialog title of the flip action setting. -->
    <string name="flip_action_dialog_title">Flip device to\u2026</string>

    <!-- Setting summary for the flip action setting. -->
    <string name="flip_action_summary">Flipping the phone down will <xliff:g id="action">%s</xliff:g></string>

    <!-- Values for the flip action settings. -->
    <string-array name="flip_action_setting_values" translatable="false">
        <item>0</item>
        <item>1</item>
        <item>2</item>
    </string-array>

    <!-- Values for flip action array entries -->
    <string name="entry_do_nothing">Do nothing</string>
    <string name="entry_mute_ringer">Mute ringer</string>
    <string name="entry_dismiss_call">Dismiss call</string>
    <string name="summary_do_nothing">do nothing</string>
    <string name="summary_mute_ringer">mute the ringer</string>
    <string name="summary_dismiss_call">dismiss the call</string>

    <!-- Entries listed in the setting for the flip action. -->
    <string-array name="flip_action_setting_entries">
        <item>@string/entry_do_nothing</item>
        <item>@string/entry_mute_ringer</item>
        <item>@string/entry_dismiss_call</item>
    </string-array>

    <!-- Summary texts for flip action. Must be ordered by numerical
         value (do nothing = 0, mute = 1, dismiss = 2) -->
    <string-array name="flip_action_summary_entries">
        <item>@string/summary_do_nothing</item>
        <item>@string/summary_mute_ringer</item>
        <item>@string/summary_dismiss_call</item>
    </string-array>
</resources>
